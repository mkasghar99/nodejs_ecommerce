<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ... (head content) -->
    <title>Shopping Cart</title>
</head>
<body>
    <h1>Shopping Cart</h1>
    <ul>
        <% cart.forEach(item => { %>
            <li>
                <%= item.name %> - $<%= item.price.toFixed(2) %>Quantity <%= item.quantity %>
                <form method="post" action="/cart/remove/<%= item.id %>">
                    <button type="submit">Remove</button>
                </form>
            </li>
        <% }); %>
    </ul>
    <a href="/products">Back to Products</a>
</body>
</html>
